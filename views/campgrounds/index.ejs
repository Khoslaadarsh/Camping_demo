<%- include('../partials/header') %> 



<div class="container">

    <header class="jumbotron">
        <h1>Welcome To YelpCamp!</h1>
        <p>View our hand-picked campgrounds form all over the world</p>
        <p>
            <a class="btn btn-primary btn large" href="/campgrounds/new">Add New Campground</a>
            
        </p>
    </header>


    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        
        <% for(var index of campgrounds){ %> 
        
            <div class="col-md-3 col-sm-6 ">
                <div class="thumbnail">

                    
                    <img src="<%= index.image %>">
                    <div class="caption">
                        <h4><%= index.name  %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= index._id %> " class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
            
            
        <% } %> 
        
    </div>

    
    
</div>

<%- include('../partials/footer') %> 